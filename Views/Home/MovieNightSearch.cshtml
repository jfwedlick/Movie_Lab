@model Movie_Lab.Services.MovieNight

@{
    ViewData["Title"] = "MovieNightSearch";
}

<h1>Movie Night!</h1>

<h4>Search for 3 movies by title.</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="MovieNight">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title1" class="control-label"></label>
                <input asp-for="Title1" class="form-control" />
                <span asp-validation-for="Title1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Title2" class="control-label"></label>
                <input asp-for="Title2" class="form-control" />
                <span asp-validation-for="Title2" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Title3" class="control-label"></label>
                <input asp-for="Title3" class="form-control" />
                <span asp-validation-for="Title3" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Search" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to Home</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
